<ribbon:RibbonWindow x:Class="SouthernLapwing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ribbon="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"        
        xmlns:extToolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended"
        Title="Quero-Quero"
		x:Name="RibbonWindow"
                     Icon="Images\quero.png"
		Width="640" Height="480">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ribbon:Ribbon x:Name="Ribbon">
            <ribbon:Ribbon.ApplicationMenu>
                <ribbon:RibbonApplicationMenu SmallImageSource="Images\SmallIcon.png">
                    <ribbon:RibbonApplicationMenuItem Header="Hello _Ribbon"
                                                      x:Name="MenuItem1"
                                                      ImageSource="Images\LargeIcon.png"/>
                </ribbon:RibbonApplicationMenu>
            </ribbon:Ribbon.ApplicationMenu>
            <ribbon:RibbonTab x:Name="HomeTab" 
                              Header="Home">
                <ribbon:RibbonGroup x:Name="Group1" 
                                    Header="Group1">
                    <ribbon:RibbonButton x:Name="ButtonSave"
                                         LargeImageSource="Images\save.png"
                                         Label="Salvar" />
                    <ribbon:RibbonButton x:Name="ButtonSend"
                                         LargeImageSource="Images\mail.png"
                                         Label="Enviar" Click="ButtonSendClick" />
                    <ribbon:RibbonButton x:Name="ButtonRefresh"
                                         LargeImageSource="Images\refresh.png"
                                         Label="Atualizar" />
                </ribbon:RibbonGroup>

            </ribbon:RibbonTab>
        </ribbon:Ribbon>
        <extToolkit:BusyIndicator Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="busyIndicator" BusyContent="Enviando...">
            <Border Grid.Row="1" Margin="5" BorderThickness="1" BorderBrush="LightSkyBlue">
                <Grid VerticalAlignment="Stretch" Name="Schedule" HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <GridSplitter Grid.Column="0" Grid.Row="0" Background="LightSkyBlue" Grid.RowSpan="3" HorizontalAlignment="Right" Width="1" AllowDrop="False"/>
                    <GridSplitter Grid.Column="1" Grid.Row="0" Background="LightSkyBlue" Grid.RowSpan="3" HorizontalAlignment="Right" Width="1" AllowDrop="False"/>
                    <GridSplitter Grid.Column="2" Grid.Row="0" Background="LightSkyBlue" Grid.RowSpan="3" HorizontalAlignment="Right" Width="1" AllowDrop="False"/>
                    <GridSplitter Grid.Column="3" Grid.Row="0" Background="LightSkyBlue" Grid.RowSpan="3" HorizontalAlignment="Right" Width="1" AllowDrop="False"/>
                    <GridSplitter Grid.Column="4" Grid.Row="0" Background="LightSkyBlue" Grid.RowSpan="3" HorizontalAlignment="Right" Width="1" AllowDrop="False"/>

                    <GridSplitter Grid.Column="0" Grid.Row="0" Background="LightSkyBlue" Grid.ColumnSpan="6" VerticalAlignment="Bottom" Height="1" AllowDrop="False" HorizontalAlignment="Stretch"/>
                    <GridSplitter Grid.Column="0" Grid.Row="1" Background="LightSkyBlue" Grid.ColumnSpan="6" VerticalAlignment="Bottom" Height="1" AllowDrop="False" HorizontalAlignment="Stretch"/>

                    <Label Grid.Column="0" Content="Turno" HorizontalAlignment="Center"/>
                    <Label Grid.Column="1" Content="Segunda" HorizontalAlignment="Center"/>
                    <Label Grid.Column="2" Content="Terça" HorizontalAlignment="Center"/>
                    <Label Grid.Column="3" Content="Quarta" HorizontalAlignment="Center"/>
                    <Label Grid.Column="4" Content="Quinta" HorizontalAlignment="Center"/>
                    <Label Grid.Column="5" Content="Sexta" HorizontalAlignment="Center"/>

                    <ItemsControl Grid.Row="1" ItemsSource="Manhã" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <ItemsControl Grid.Row="2" ItemsSource="Tarde" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <Label Grid.Row="1" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="{Binding}" Margin="1" MouseRightButtonUp="Label_MouseRightButtonUp"
                           HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="64" MouseLeftButtonUp="LabelMouseLeftButtonUp" DataContextChanged="LabelDataContextChanged"/>
                    <Label Grid.Row="1" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="{Binding}" Margin="1" MouseRightButtonUp="Label_MouseRightButtonUp"
                           HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="64" MouseLeftButtonUp="LabelMouseLeftButtonUp" DataContextChanged="LabelDataContextChanged"/>
                    <Label Grid.Row="1" Grid.Column="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="{Binding}" Margin="1" MouseRightButtonUp="Label_MouseRightButtonUp"
                           HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="64" MouseLeftButtonUp="LabelMouseLeftButtonUp" DataContextChanged="LabelDataContextChanged"/>
                    <Label Grid.Row="1" Grid.Column="4" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="{Binding}" Margin="1" MouseRightButtonUp="Label_MouseRightButtonUp"
                           HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="64" MouseLeftButtonUp="LabelMouseLeftButtonUp" DataContextChanged="LabelDataContextChanged"/>
                    <Label Grid.Row="1" Grid.Column="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="{Binding}" Margin="1" MouseRightButtonUp="Label_MouseRightButtonUp"
                           HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="64" MouseLeftButtonUp="LabelMouseLeftButtonUp" DataContextChanged="LabelDataContextChanged"/>
                    <Label Grid.Row="2" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="{Binding}" Margin="1" MouseRightButtonUp="Label_MouseRightButtonUp"
                           HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="64" MouseLeftButtonUp="LabelMouseLeftButtonUp" DataContextChanged="LabelDataContextChanged"/>
                    <Label Grid.Row="2" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="{Binding}" Margin="1" MouseRightButtonUp="Label_MouseRightButtonUp"
                           HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="64" MouseLeftButtonUp="LabelMouseLeftButtonUp" DataContextChanged="LabelDataContextChanged"/>
                    <Label Grid.Row="2" Grid.Column="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="{Binding}" Margin="1" MouseRightButtonUp="Label_MouseRightButtonUp"
                           HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="64" MouseLeftButtonUp="LabelMouseLeftButtonUp" DataContextChanged="LabelDataContextChanged"/>
                    <Label Grid.Row="2" Grid.Column="4" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="{Binding}" Margin="1" MouseRightButtonUp="Label_MouseRightButtonUp"
                           HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="64" MouseLeftButtonUp="LabelMouseLeftButtonUp" DataContextChanged="LabelDataContextChanged"/>
                    <Label Grid.Row="2" Grid.Column="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="{Binding}" Margin="1" MouseRightButtonUp="Label_MouseRightButtonUp"
                           HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="64" MouseLeftButtonUp="LabelMouseLeftButtonUp" DataContextChanged="LabelDataContextChanged"/>
                    
                </Grid>
            </Border>
        </extToolkit:BusyIndicator>
    </Grid>
</ribbon:RibbonWindow>
