<ribbon:RibbonWindow x:Class="SouthernLapwing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ribbon="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
        Title="Quero-Quero"
		x:Name="RibbonWindow"
		Width="640" Height="480">

	<Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ribbon:Ribbon x:Name="Ribbon">
            <ribbon:Ribbon.ApplicationMenu>
                <ribbon:RibbonApplicationMenu SmallImageSource="Images\SmallIcon.png">
                    <ribbon:RibbonApplicationMenuItem Header="Hello _Ribbon"
                                                      x:Name="MenuItem1"
                                                      ImageSource="Images\LargeIcon.png"/>
                </ribbon:RibbonApplicationMenu>
            </ribbon:Ribbon.ApplicationMenu>
            <ribbon:RibbonTab x:Name="HomeTab" 
                              Header="Home">
                <ribbon:RibbonGroup x:Name="Group1" 
                                    Header="Group1">
                    <ribbon:RibbonButton x:Name="ButtonSave"
                                         LargeImageSource="Images\save.png"
                                         Label="Salvar" />
                    <ribbon:RibbonButton x:Name="ButtonSend"
                                         LargeImageSource="Images\mail.png"
                                         Label="Enviar" />
                    <ribbon:RibbonButton x:Name="ButtonRefresh"
                                         LargeImageSource="Images\refresh.png"
                                         Label="Atualizar" />
                </ribbon:RibbonGroup>
                
            </ribbon:RibbonTab>
        </ribbon:Ribbon>
        <Grid ShowGridLines="True" Grid.Row="1" VerticalAlignment="Stretch" Name="Schedule" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>                
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="Turno" HorizontalAlignment="Center"/>
            <Label Grid.Column="1" Content="Segunda" HorizontalAlignment="Center"/>
            <Label Grid.Column="2" Content="Terça" HorizontalAlignment="Center"/>
            <Label Grid.Column="3" Content="Quarta" HorizontalAlignment="Center"/>
            <Label Grid.Column="4" Content="Quinta" HorizontalAlignment="Center"/>
            <Label Grid.Column="5" Content="Sexta" HorizontalAlignment="Center"/>

            <ItemsControl Grid.Row="1" ItemsSource="Manhã" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <ItemsControl Grid.Row="2" ItemsSource="Tarde" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <Rectangle Grid.Row="1" Grid.Column="1" MouseLeftButtonUp="Rectangle_MouseLeftButtonUp"/>
            <Label Grid.Row="1" Grid.Column="1" Content="Prioridade" VerticalAlignment="Bottom" Padding="0,0,0,20" HorizontalAlignment="Center"/>
            <ComboBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
                <ComboBoxItem>Opção 1</ComboBoxItem>
                <ComboBoxItem>Opção 2</ComboBoxItem>
                <ComboBoxItem>Opção 3</ComboBoxItem>                                
            </ComboBox>

        </Grid>
    </Grid>
</ribbon:RibbonWindow>
